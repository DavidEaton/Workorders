                                                                    })

        if (DsiWorkorders.Web.Helpers.UserFunctions.IsAdmin())
        {
            <a class="btn btn-danger jq-delete-link pull-right" data-reload="@Url.Action("Index", "Workorders")" href="@Url.Action("Delete", "Workorders", new { id = Model })">Delete</a>
        }

        @Html.ActionLink("Cancel", "Index", "Workorders", null, new
                                                                    {
                                                                        @class = "btn btn-default pull-left"
                                                                    })
    }
    else
    {
        @Html.ActionLink("Ok", "Index", "Workorders", null, new
                                                                    {
